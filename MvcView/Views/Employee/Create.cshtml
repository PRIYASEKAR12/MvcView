@model EmployeeEntity.Employee

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Employee", FormMethod.Post))
{
    <table cellpadding="10">
        <tr>
            <td>
                @Html.Label("EmployeeId")
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.EmployeeId)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.EmployeeName)</td>
            <td>@Html.EditorFor(Model => Model.EmployeeName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.EmployeePhoneNumber)</td>
            <td>@Html.EditorFor(Model => Model.EmployeePhoneNumber)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.Age)</td>
            <td>@Html.EditorFor(Model => Model.Age)</td>
        </tr>
        <tr>
            <td>
                @Html.Label("Gender")
            </td>
            <td>
                @Html.RadioButtonFor(Model => Model.Gender, "Male")Male
                @Html.RadioButtonFor(Model => Model.Gender, "Female") Female
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Back to list", "Index")
            </td>
            <td>
                <input type="submit" id="Add" />
            </td>
        </tr>
    </table>
}

